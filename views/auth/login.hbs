<div class="login-container">
    <div class="login-box">
        <h1 class="login-title">Вход</h1>
        <form class="login-form" action="/auth/login" method="post">
            <input name="email" type="email" class="email input" placeholder="Введите ваш email">
            <input name="password" type="password" class="password input" placeholder="Введите пароль">
            <div class="login-btns">
                <a href="/auth/register" class="login-register">Создать аккаунт</a>
                <button type="submit" class="login-btn">Войти</button>
            </div>
        </form>
    </div>
</div>